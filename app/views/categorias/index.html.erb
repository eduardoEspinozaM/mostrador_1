
<p id="notice"><%= notice %></p>


<h1>
<span class="label label-primary">Lista de Categorias</span>
</h1>




<table class="table table-condensed" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr row=25px>
        <td> <%= categoria.nombre %> 
         <%= link_to 'Mostrar', categoria, class: "btn btn-primary btn-xs" %>
        <%= link_to 'Editar', edit_categoria_path(categoria), remote: "true", class: "btn btn-success btn-xs" %>
      <%= link_to 'Eliminar', categoria, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
      </tr>
    </td> 

    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nueva Categoria', new_categoria_path, class: "btn btn-default"  %>
