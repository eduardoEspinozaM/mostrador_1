
    <div class="form-group col-md-8">
     <h2 class="form-signin-heading">Información de Acceso</h2>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-md-8 ">
            <div class="col-md-6">                         
          <%= f.email_field :email, autofocus: true,requiered: true, :class=>"form-control input-lg" ,placeholder: "Usuario"%>
        </div>
       
      <div class="col-md-6">
       <%= f.password_field :password, autocomplete: "off",requiered: true,:class=>"form-control input-lg", placeholder: "Contraseña" %>
      </div>
      </div>
        
        <div class="form-group col-md-8 ">
        <div class="col-md-4">
          <%= f.submit "Entrar", :class=>"btn btn-lg btn-primary btn-block" %>
           <% if devise_mapping.rememberable? -%>
          <div class="col-md-4">
            <%= f.check_box :remember_me %>
            <%= f.label "Recordar" %>
          </div>
          <% end -%>
        </div>
        </div>
            <%= render "devise/shared/links" %>
        <% end %>
    
    </div>





